setwd("D:/VIS/tidytuesday/MakeoverMonday/2026")
library(tidyverse)
library(showtext)
### Fonts
font_add_google("Roboto Condensed", 'rc')
font_add_google('Roboto', 'robo')
showtext_auto()
df_plot <- df |>
pivot_longer(
cols = -`State Name`,
names_to = 'place',
values_to = 'job'
) |>
group_by(place, job) |>
count() |>
mutate(job = ifelse(n >= 6, job, 'Other')) |>
group_by(place, job) |>
summarise(n = sum(n), .groups = 'drop')
